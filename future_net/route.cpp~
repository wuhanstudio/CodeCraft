#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include "route.h"
#include "lib_record.h"


void split(char **arr,char *str,const char *del) {
	char *s = strtok(str, del);
	while (s != NULL) {
		*arr++ = s;
		s = strtok(NULL, del);
	}
}

//你要完成的功能总入口
void search_route(char *graph[5000], int edge_num, char *condition)
{
	unsigned short result[] = { 2, 6, 5 };//示例中的一个解
	char *dst[4];
	int max = 0;
	
	int *matrix[600];
	//matrix = (int**)malloc(600 * 600 * sizeof(int));
	
	//if (NULL == matrix)
	//{
	//	return;
	//}

	for (int i = 0; i < 600; i++)
	{
		matrix[i] = (int *)malloc(sizeof(int) * 600);
		if (matrix[i] == NULL)
		{
			return;
		}
	}

	for (int i = 0;i < 600;i++)
	{
		for (int j = 0;j < 600;j++)
			matrix[i][j] = 0;
	}

	for (int i = 0;i < edge_num;i++)
	{
		split(dst, (char*)graph[i], ",");

		int start = atoi(dst[1]);
		int end = atoi(dst[2]);

		matrix[start][end] = atoi(dst[3]);
		max = atoi(dst[1])>max ? atoi(dst[1]) : max;
		max = atoi(dst[2])>max ? atoi(dst[2]) : max;
	}

	gprintf("matrix-----\n");
	for (int i = 0;i < max;i++)
	{
		for (int j = 0;j < max;j++)
			printf("%d,", matrix[i][j]);
		printf("\n");
	}
	
	for (int i = 0; i < 3; i++)
		record_result(result[i]);
}

